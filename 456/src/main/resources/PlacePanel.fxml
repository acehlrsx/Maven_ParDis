<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox prefWidth="948.0" spacing="10" style="-fx-border-color: gray; -fx-padding: 10;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.addPlaceController">
   <ComboBox fx:id="placeHour" maxWidth="70.0" minWidth="70.0" prefWidth="70.0" />
   <ComboBox fx:id="placeMin" maxWidth="70.0" minWidth="70.0" prefWidth="70.0" />
   <ComboBox fx:id="placeAMPM" maxWidth="80.0" minWidth="80.0" prefWidth="80.0" />
    <TextField fx:id="placeDestinationField" prefHeight="26.0" prefWidth="552.0" promptText="Enter your destination" />
    <Button fx:id="deletePlaceButton" maxWidth="150.0" minWidth="150.0" onAction="#deletePlace" prefWidth="150.0" style="-fx-background-color: rgb( 224, 31, 147); -fx-background-radius: 50;" text="Delete" textFill="WHITE">
      <font>
         <Font name="Segoe UI Bold" size="12.0" />
      </font></Button>
</HBox>
