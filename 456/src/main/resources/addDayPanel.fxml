<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="dayPanelsContainer" maxHeight="1.7976931348623157E308" minHeight="182.0" prefHeight="182.0" prefWidth="971.0" spacing="10" style="-fx-border-color: gray; -fx-border-radius: 10; -fx-padding: 10;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.addDayController">
    <Label fx:id="dayLabel" text="Day 1">
      <font>
         <Font name="Segoe UI Bold" size="15.0" />
      </font></Label>
    <HBox alignment="CENTER_LEFT" spacing="10">
      <Button fx:id="AddPlaceBtn" mnemonicParsing="false" onAction="#AddPlace" style="-fx-background-color: rgb( 224, 31, 147); -fx-background-radius: 50;" text="Add Place" textFill="WHITE" />
      <Button fx:id="removeDayBtn" mnemonicParsing="false" onAction="#removeDay" style="-fx-background-color: rgb( 224, 31, 147); -fx-background-radius: 50;" text="Delete Day" textFill="WHITE" />
    </HBox>
    <ScrollPane fx:id="placesScrollPane" hbarPolicy="NEVER" prefHeight="150">
        <content>
            <VBox fx:id="placesContainer" spacing="10">
                
            </VBox>
        </content>
    </ScrollPane>
</VBox>
